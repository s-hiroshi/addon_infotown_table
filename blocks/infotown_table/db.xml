<?xml version="1.0" encoding="UTF-8"?>
<schema
  xmlns="http://www.concrete5.org/doctrine-xml/0.5"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.concrete5.org/doctrine-xml/0.5 http://concrete5.github.io/doctrine-xml/doctrine-xml-0.5.xsd">

  <table name="btInfotownTable">
    <field name="bID" type="integer">
      <unsigned/>
      <key/>
    </field>
    <field name="rowsLength" type="integer"/>
    <field name="colsLength" type="integer"/> 
    <field name="blockTitle" type="string" size="255"/>
  </table>

  <table name="btInfotownTableEntries">
    <field name="id" type="integer">
      <unsigned/>
      <autoincrement/>
      <key/>
    </field>
    <field name="bID" type="integer">
      <unsigned/>
    </field>
    <field name="content" type="text"/>
    <field name="th" type="text" />
    <index name="bID">
      <col>bID</col>
    </index>
  </table>

</schema>
